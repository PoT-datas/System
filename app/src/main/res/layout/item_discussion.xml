<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">
    <RelativeLayout
        android:id="@+id/container"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/containInfo"
            android:text="UserA(+237)"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"/>
        <RelativeLayout
            android:id="@+id/containInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:text="The input chat content\nThis is the message received by the user."
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/containInfo"
            android:text="meta"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"/>
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/containInfo"
            android:layout_alignBottom="@+id/containInfo"
            android:layout_marginLeft="-20dp"/>
        <ImageView
            android:id="@+id/pp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_account_circle_black_3"/>
    </RelativeLayout>
</RelativeLayout>